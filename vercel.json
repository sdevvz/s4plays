{
    "version": 2,
    "name": "appvault",
    "buildCommand": "npm run vercel:build",
    "outputDirectory": "storage/app/static",
    "installCommand": "composer install --no-dev --optimize-autoloader && npm ci",
    "framework": null,
    "regions": ["iad1"],
    "github": {
      "silent": true
    },
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "/404.html"
      }
    ],
    "headers": [
      {
        "source": "/build/(.*)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      },
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          }
        ]
      }
    ]
  }